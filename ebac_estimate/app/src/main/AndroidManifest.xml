<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jimmy.ebac_estimate">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.jimmy.ebac_estimate.GlobalVariable"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_ID"/>

        <activity android:name="com.jimmy.ebac_estimate.InfoActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.jimmy.ebac_estimate.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jimmy.ebac_estimate.ModifyDrink"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jimmy.ebac_estimate.ViewDrinkActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jimmy.ebac_estimate.AddDrinkActivity2"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jimmy.ebac_estimate.AddDrinkActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jimmy.ebac_estimate.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>